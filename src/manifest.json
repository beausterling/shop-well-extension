{
  "manifest_version": 3,
  "name": "Shop Well",
  "version": "0.1.0",
  "description": "Wellness-friendly shopping assistant for chronic conditions",
  "permissions": ["storage", "scripting", "activeTab", "tabs", "sidePanel"],
  "host_permissions": [
    "*://www.amazon.com/*",
    "*://www.walmart.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "assets/icon128.png"
    },
    "default_title": "Shop Well - Wellness Shopping Assistant"
  },
  "content_scripts": [{
    "matches": ["*://www.amazon.com/*", "*://www.walmart.com/*"],
    "js": ["content/content.js"],
    "run_at": "document_idle",
    "world": "ISOLATED"
  }],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "options_page": "options/index.html",
  "icons": {
    "128": "assets/icon128.png"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+Shift+W",
        "mac": "Alt+Shift+W"
      },
      "description": "Toggle Shop Well panel"
    },
    "test-ui-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S"
      },
      "description": "Open UI test panel"
    }
  }
}