# Shop Well Backend Environment Configuration
# Copy this file to .env.yaml and fill in your actual values

# REQUIRED: Your Google Sheet Spreadsheet ID
# Find this in your Google Sheets URL:
# https://docs.google.com/spreadsheets/d/SPREADSHEET_ID_HERE/edit
# Example: 1BxiMVs0XRA5nFMdKvBdBZjgmUInqkB3SzK5Y9U-pqLc
GOOGLE_SHEET_ID: "YOUR_SPREADSHEET_ID_HERE"

# REQUIRED: The name of the sheet tab where data will be stored
# This must match exactly (case-sensitive) with your Google Sheets tab name
# Default: "User Emails"
SHEET_NAME: "User Emails"

# OPTIONAL: Environment mode
# Options: production, development, staging
# Default: production
NODE_ENV: "production"
